generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Required Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Custom BDCinema fields
  password_hash String?
  role          String    @default("user")
  created_at    DateTime  @default(now())

  // NextAuth Relations
  accounts      Account[]
  sessions      Session[]

  // BDCinema Relations
  reviews       Review[]
  watchlists    WatchlistItem[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// BDCinema Core Models
model Movie {
  id             Int       @id @default(autoincrement())
  tmdb_id        Int?      @unique
  title          String
  original_title String?
  overview       String?   @db.Text
  release_year   Int?
  poster_url     String?   @db.Text
  backdrop_url   String?   @db.Text
  type           String    // 'movie' | 'series'
  source         String    // 'tmdb' | 'custom'
  genres         String    // Stored as JSON string
  created_at     DateTime  @default(now())

  reviews       Review[]
  watchlists    WatchlistItem[]
}

model Review {
  id           Int      @id @default(autoincrement())
  movie_id     Int
  user_id      String
  meter_rating String   // 'disaster' | 'timepass' | 'go_for_it' | 'perfection'
  body         String?  @db.Text
  created_at   DateTime @default(now())

  movie Movie @relation(fields: [movie_id], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([movie_id, user_id]) // One review per user per movie
}

model WatchlistItem {
  id         Int      @id @default(autoincrement())
  movie_id   Int
  user_id    String
  created_at DateTime @default(now())

  movie Movie @relation(fields: [movie_id], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([movie_id, user_id]) // Prevent duplicate watchlist entries
}
